// helpers for express handlebars

module.exports = {
  avgRating: function(data) { 
    var _data = JSON.stringify(data)
    console.log(_data);
    var sum = 0;
    var count = 0; 

    for (var i in _data) { 
      console.log(data[i]);
      if (data[i]) { 
        sum += data[i].rating;
        count += 1;
      }
      
    }

    console.log(sum/count);
    return sum/count;
  }
}